<h1> Signup Form </h1>
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>

<%= form_for(@signup) do |f| %>
    
  
    <label>Walker:</label><br>
    <%= f.collection_select :walker_id, Walker.all, :id, :full_name, prompt: true  %><br>

    <label>dog:</label><br>
    <%= f.collection_select :dog_id, Dog.all, :id, :name, prompt: true %><br>

    <label>Date:</label><br>
    <%= f.date_field :date %><br>

    <label>Time:</label><br>
    <%= f.time_field :time %><br>

   
    
    <%= f.submit %>
  <% end %>