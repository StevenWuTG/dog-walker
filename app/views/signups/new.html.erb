<h1> Signup Form </h1>
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>

<%= form_for(@signup) do |f| %>
    <label>Signup's name:</label><br>
    <%= f.text_field :name %><br>
  
    <label>Signup's Breed:</label><br>
    <%= f.text_field :breed %><br>

    <label>Age:</label><br>
    <%= f.number_field :age %><br>

    <label>Sex:</label><br>
    <%= f.text_field :sex %><br>
    
  

    
    <%= f.submit %>
  <% end %>