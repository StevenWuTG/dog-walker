<h1> Dog Form </h1>
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>

<%= form_for(@dog) do |f| %>
    <label>Dog's name:</label><br>
    <%= f.text_field :name %><br>
  
    <label>Dog's Breed:</label><br>
    <%= f.text_field :breed %><br>

    <label>Age:</label><br>
    <%= f.number_field :age %><br>

    <!--<label>Sex:</label><br>
    <%= f.text_field :sex %><br>-->

    <%= f.label :sex %>
    <%= f.label :m %>
    <%= f.radio_button :sex, "M"  %>
    <%= f.label :f %>
    <%= f.radio_button :sex, "F"  %><br>
  

    
    <%= f.submit %>
  <% end %>